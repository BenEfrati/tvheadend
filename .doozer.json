{
	"targets": {
		"android": {
			"buildenv": "trusty-amd64",
			"submodules": ["android"],
			"builddeps": {
				"debs": [
					"cmake",
					"git",
					"build-essential",
					"pkg-config",
					"gettext",
					"libavahi-client-dev",
					"libssl-dev",
					"zlib1g-dev",
					"wget",
					"bzip2",
					"git-core",
					"liburiparser-dev",
					"python",
					"dvb-apps"
				],

				"android-sdk": [
					"platform-tools",
					"android-21",
					"build-tools-21.1.2"
				],

				"android-ndk": "http://dl.google.com/android/ndk/android-ndk-r10e-linux-x86.bin"

			},
			"buildcmd": [
				"./configure --disable-dvbscan --disable-avahi --disable-libav --disable-dbus_1 --disable-tvhcsa --enable-dvbcsa --enable-bundle --enable-android --arch=armeabi-v7a --disable-ffmpeg_static --disable-hdhomerun_static --cc=/android/android-ndk-r10e/toolchains/arm-linux-androideabi-4.9/prebuilt/linux-x86_64/bin/bin/arm-linux-androideabi-gcc",
				"make -j ${PARALLEL}"
			]
		}
	}
}
